<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent=" ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HomeGridRowTop" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryTrans</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:textColor">@color/colorAccent2</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="HomeGridRowBottom" parent="HomeGridRowTop">
    </style>

    <style name="HomeCardViewTextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@drawable/activity_assignment_detail_background</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="HomeActivityIcons">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SignupChoiceStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StartTimeImageButtonStyle">
        <item name="android:layout_gravity">end|right</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:background">@color/colorChatBackground</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="EndTimeImageButtonStyle" parent="StartTimeImageButtonStyle">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
    </style>

    <style name="CancelOkButtonStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">6dp</item>
        <!--<item name="android:textColor">@color/colorAccent2</item>-->
    </style>
</resources>
